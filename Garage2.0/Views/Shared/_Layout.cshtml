<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap-table")
    @Styles.Render("~/Content/datepicker")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index")" class="navbar-brand"><img src="~/Content/Images/logo2.png" alt="Garage 2.0" style="height:30px;display:inline;margin-right:5px;">Garage 2.0</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>
                        @Ajax.ActionLink("Check In", "Checkin", null, new AjaxOptions
                   {
                       InsertionMode = InsertionMode.Replace,
                       UpdateTargetId = "ModalContainer",
                       HttpMethod = "GET",
                       OnSuccess = "ModalLoaded"
                   }, new { target = "_self" })
                    </li>
                    <li>@Html.ActionLink("Search", "Search", "Home")</li>
                </ul>
                <ul class="nav navbar-nav pull-right col-md-6 col-lg-push-1 col-xs-10">
                    <li>
                        
                    <li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/Script.js")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bootstrap-table")

    @Scripts.Render("~/bundles/momentjs")
    @Scripts.Render("~/bundles/datepicker")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.js")
    @RenderSection("scripts", required: false)
</body>

</html>
