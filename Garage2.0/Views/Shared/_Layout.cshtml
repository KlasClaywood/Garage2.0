<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap-table")
    @Styles.Render("~/Content/datepicker")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>
                        @Ajax.ActionLink("Check In", "Checkin", null, new AjaxOptions
                        {
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "ModalContainer",
                            HttpMethod = "GET",
                            OnSuccess = "ModalLoaded"
                        }, new { target = "_self" })
                    </li>
                    <li>@Html.ActionLink("Search", "Search", "Home")</li>
                </ul>
                <div class="col-xs-5 col-md-3 pull-right">
                    @using (Ajax.BeginForm("Search", null, new AjaxOptions
                {
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "VechicleListContainer",
                    HttpMethod = "GET"
                }, new { @class = "form-group" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="input-group">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>

                            <input type="search" class="form-control typeahead" placeholder="Owner" name="SearchOwner" id="SearchOwner" />
                            <!--@@Html.TextBox("SearchTerm", "", new { @@class = "form-control", @@placeholder = "Search" })>-->
                            <div class="input-group-btn dropdown">
                                <a href="#" class="dropdown-toggle btn btn-default" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><input type="search" class="form-control" placeholder="RegNr" name="SearchRegNr" id="SearchRegNr" /></li>
                                    <li><input type="search" class="form-control" placeholder="Color" name="SearchColor" id="SearchColor" /></li>
                                </ul>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/Script.js")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bootstrap-table")

    @Scripts.Render("~/bundles/momentjs")
    @Scripts.Render("~/bundles/datepicker")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.js")
    @RenderSection("scripts", required: false)
</body>
</html>
