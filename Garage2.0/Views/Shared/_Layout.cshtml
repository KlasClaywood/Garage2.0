<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap-table")
    @Styles.Render("~/Content/datepicker")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>
                        @Ajax.ActionLink("Check In", "Checkin", null, new AjaxOptions
                   {
                       InsertionMode = InsertionMode.Replace,
                       UpdateTargetId = "ModalContainer",
                       HttpMethod = "GET",
                       OnSuccess = "ModalLoaded"
                   }, new { target = "_self" })
                    </li>
                    <li>@Html.ActionLink("Search", "Search", "Home")</li>
                </ul>
                <ul class="nav navbar-nav pull-right col-md-6 col-lg-push-4 col-xs-10">
                    <li>
                        @using (Ajax.BeginForm("Search", null, new AjaxOptions
                        {
                            InsertionMode = InsertionMode.Replace,
                            UpdateTargetId = "VechicleListContainer",
                            HttpMethod = "POST"
                        }, new { @class = "form-horizontal", role = "form" }))
                        {
                            
                            <div class="input-group col-md-6 col-xs-7">

                                <div class="input-group-btn">
                                    @Html.AntiForgeryToken()
                                    <input type="search" class="form-control" placeholder="Owner" name="SearchOwner" id="SearchOwner" />

                                    <button class="btn btn-primary" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                                    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <span class="caret"></span>
                                        <span class="sr-only">Toggle Dropdown</span>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-right" role="menu">
                                        <label for="SearchRegNr" style="margin:0;margin-left: 7px;">Regestration Number</label>
                                        <div class="form-group" style="margin: 5px">
                                            <input type="search" class="form-control" placeholder="Regestration" name="SearchRegNr" id="SearchRegNr" />
                                        </div>
                                        <div role="separator" class="divider"></div>
                                        <label for="SearchColor" style="margin:0;margin-left: 7px;">Color</label>
                                        <div class="form-group" style="margin: 5px">
                                            <input type="search" class="form-control" placeholder="Color" name="SearchColor" id="SearchColor" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    <li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/Script.js")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bootstrap-table")

    @Scripts.Render("~/bundles/momentjs")
    @Scripts.Render("~/bundles/datepicker")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.js")
    @RenderSection("scripts", required: false)
</body>

</html>
