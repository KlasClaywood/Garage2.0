                @Html.EditorFor(model => model.SearchOwner, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SearchOwner, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SearchRegNr, htmlAttributes: new { @class = "control-label col-md-2" })
